{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "vite build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "TriFlow-AI",
    "version": "0.3.16"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$APPDATA/*",
          "$APPDATA/**"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.triflow.desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "nsis": {
          "license": null,
          "installerIcon": "icons/icon.ico",
          "headerImage": null,
          "sidebarImage": null,
          "installMode": "currentUser",
          "languages": [
            "Korean",
            "English"
          ],
          "displayLanguageSelector": false
        }
      },
      "longDescription": "TriFlow AI - AI 기반 워크플로우 자동화 플랫폼으로, 드래그앤드롭 방식의 직관적인 인터페이스로 복잡한 비즈니스 프로세스를 시각적으로 설계하고 자동화합니다.",
      "shortDescription": "TriFlow AI 워크플로우 플랫폼",
      "resources": []
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://mugoori.github.io/Judgify-core/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVDRUUzRjAxRDY5QkE0NzcKUldSM3BKdldBVC91WE9udWNhWjhOSitsSFhycHhOc1V2UTBxTlF1Mk5xY1lLVVFvZU5rcW16ME4K"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "TriFlow-AI Platform",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700
      }
    ],
    "systemTray": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "title": "TriFlow-AI"
    }
  }
}
